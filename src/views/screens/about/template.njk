{% from "macros/card.njk" import card %}

{% extends "layout/default.njk" %}
{% block content %}
  <div class="landingPage">
  <header class="landingPage__header full-width-banner" role="banner">
    <div class="landingPage__header-heading">
      <h1 class="govuk-heading-xl banner-container__heading-xl">{{ pageHeading }}</h1>
      <img alt="Department for Environment Food &amp; Rural Affairs Logo" src="{{ assetPath }}/images/NCEA-logo-landscape.png" class="banner-container__ncea-logo">
    </div>
  </header>
   <section class="landingPage__intro">
        <div class="categories__intro-content">
          {% for content in introText.content %}
            <p class="govuk-body govuk-!-margin-bottom-6">
            {{ content }}
            </p>
          {% endfor %}
        </div>
        <img class="landingPage__intro-img" src={{ introText.imageUrl }} title="Landing Page Introduction Image">
    </section>
    {% if displayCategoryPages %}
      <section class="landingPage__categories">
        <div class="landingPage__categories_cardLayout">
        {% for item in categories %}
          {{card(item.text, item.imgUrl, item.title)}}
        {% endfor %}
        </div>
      </section>
    {% endif %}
    <section class="landingPage__partnersLogo">
      <div class="landingPage__partnersLogo-leftsection">
        <h2 class="govuk-heading-m">Our Partners</h2>
          <div class="landingPage__partnersLogo-leftsection--logos">
           {% for item in partnerLogos %}
              <a href="{{ item.link }}"><img src="{{ item.imgUrl }}" title="{{ item.title }}"></a>
           {% endfor %}
          </div>
      </div>
        <div class="landingPage__partnersLogo-rightsection">
          <h2 class="govuk-heading-m">Product Brochure</h2>
            <p class="govuk-body">Explore our latest products with detailed specifications and benefits.</p>
          <div class="landingPage__partnersLogo-rightsection--brochure">
              <img src="{{ assetPath }}/images/template.jpg" title="Product Brochure">
          </div>
        </div>
      </div>
    </section>
    <section class="landingPage__feedlinks">
     <div class="landingPage__feeds_container">
      <div class="landingPage__feeds_container--feeds">
        <h2 class="govuk-heading-m">{{feedsList.title}}</h2>
        <ul class="govuk-list">
          {% for article in feedsList.articles %}
            <li class="govuk-width-container feed-container landingPage__feeds_container--feeds-list">
              <h3 class="govuk-heading-s">{{ article.title }}</h3>
               <div class="captions-section">
                  <small><b>Author: </b>{{ article.author }}</small>
                  <small><b>Published on : </b>{{ article.pubDate }}</small>
                </div>
              <p class="govuk-body">{{ article.summary }}</p>
              <a href="{{ article.link }}" target="_blank">{{ article.title }}</a>
            </li>
          {% endfor %}
        </ul>
        <p class="govuk-body landingPage__feeds_container--feeds-text">
          <a href="{{routes.homePage}}/feeds" class="govuk-link">More Feeds</a>
        </p>
      </div>
        <div class="landingPage__links_container">
          <div class="landingPage__links_container-heading"><h2 class="govuk-heading-m">Quick Links</h2></div>
           <div class="landingPage__links_container-quicklinks">
           {% for item in quickLinks %}
              <div class="landingPage__links_container-quicklinks-list">
                    <img width="30px" height="30px" src="{{ item.iconUrl }}" title="{{item.iconName}}">
                      <a href="{{ item.link }}" target="_blank" rel="noreferrer noopener" class="govuk-link govuk-link--no-underline">{{item.iconName}}</a>
                </div>
            {% endfor %}
              </div>
        </div>
     </div>
    <section>
    <section class="landingPage__newsletter">
       <a href="#" class="govuk-link govuk-link--no-underline landingPage__newsletter--text">Join our mailing list</a>
    <section>
  </div>
{% endblock %}
